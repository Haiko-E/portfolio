<section class='contact'>
  <div class='contact__box'>
    <div class='contact__envelope'>
      <svg
        id='Envelope'
        xmlns='http://www.w3.org/2000/svg'
        viewBox='-0 -200 458 660'
      >
        <title>mail-envelope-closed</title>

        <polyline
          class='cls-1 test1'
          pathLength='1'
          points='456.5 1.5 229 127.5 1.5 1.5'></polyline>

        <rect
          class='cls-1 test'
          x='1.5'
          y='1.5'
          pathLength='1'
          width='455'
          height='252'></rect>
      </svg>
    </div>

    <div class='contact__content'>
      <h2>Let's Talk</h2>
      <h3>Enter your message</h3>
      <form action='' class='contact__form'>
        <div class='contact__inputs'>
          <div class='contact__inputs-wrapper'>
            <input
              placeholder='Name'
              class='input'
              type='text'
              name='name'
              id='name'
            />
            <label class='label' for='name'>Name</label>
          </div>
          <div class='contact__inputs-wrapper'>
            <input
              placeholder='Email'
              class='input'
              type='email'
              name='email'
              id='email'
            />
            <label class='label' for='email'>Email</label>
          </div>
        </div>
        <div class='contact__inputs-wrapper'>
          <textarea
            placeholder='Message'
            class='input'
            name='message'
            id='message'
            rows='1'
            cols='60'></textarea>
          <label class='label' for='message'>Message</label>
        </div>
        <div class='contact__submit'>
          <a class='btn' href=''>SUBMIT FORM</a>
          <div class='contact__info'>
            <p>haiko.erinkveld@gmail.com</p>
            <p>+31 6 11372744</p>
          </div>
        </div>
      </form>
    </div>
  </div>
</section>

<style lang='scss'>
  @import '../sass/_variables.scss';
  @import '../sass/_components.scss';

  svg {
    width: 60%;
    max-width: 220px;
    fill: transparent;
  }

  svg:hover {
    animation: send 1000ms forwards 1000ms;
    .test1 {
      animation: close 1000ms forwards, stroke 0.8s linear alternate forwards 2000ms;
    }

    .test {
      animation: stroke 1s linear alternate forwards 1900ms;
    }
  }

  .cls-1 {
    stroke: orange;
    stroke-width: 3px;
    // stroke-dasharray: 0;
    // stroke-dashoffset: 0;
  }

  .test {
    stroke: orange;
    stroke-width: 3px;
    stroke-dasharray: 1;
    stroke-dashoffset: 0;
  }
  .test1 {
    transform: rotateX(-180deg);
    stroke-dasharray: 1;
    stroke-dashoffset: 0;
  }

  @keyframes close {
    0% {
      transform: rotateX(-180deg);
    }

    100% {
      transform: rotateX(0deg);
    }
  }

  @keyframes send {
    0% {
      transform: translateX(0);
    }

    50% {
      transform: translateX(-10%);
    }

    80% {
      transform: translateX(50%);
    }

    100% {
      transform: translateX(40%);
    }
  }

  @keyframes stroke {
    from {
      stroke-dashoffset: 0;
    }
    to {
      stroke-dashoffset: 1;
    }
  }

  .contact {
    display: flex;
    justify-content: center;
    align-items: center;
    color: $white;
    position: relative;
    min-height: 100vh;
    background-color: $black;
    @media only screen and (max-width: $media-medium) {
      padding: 5rem 0;
      min-height: auto;
    }

    h2 {
      margin-bottom: 0.5rem;
    }

    h3 {
      margin-bottom: 2rem;
    }

    &__inputs {
      display: flex;

      &-wrapper {
        width: 100%;
        position: relative;

        .input {
          font-family: inherit;
          caret-color: rgba(187, 187, 187, 0.2);
          color: $platinum;
          margin-bottom: 1.5rem;
          padding: 0.5rem 0;
          background-color: transparent;
          border: none;
          border-bottom: 1px solid rgba(128, 128, 128, 0.5);
          resize: none;
          width: 100%;

          &:focus,
          :active {
            outline: none;
          }
        }

        .input::placeholder {
          color: rgba(128, 128, 128, 0.5);
          font-size: 0.7rem;
        }

        .input:placeholder-shown + .label {
          opacity: 0;
          top: 4px;
        }

        .label {
          color: rgba(128, 128, 128, 0.5);
          position: absolute;
          top: -12px;
          left: 0;
          transition: all 100ms ease-in-out;
          font-size: 0.7rem;
        }
      }

      &-wrapper:not(:last-child) {
        margin-right: 10px;
      }
    }

    &__box {
      display: flex;
      padding: 4rem 3rem;
      height: fit-content;
      width: 80%;
      background-color: rgb(19, 19, 19);
    }

    &__envelope {
      display: flex;
      align-items: center;
      width: 40%;
    }

    &__content {
      display: flex;
      flex-direction: column;
      justify-content: space-between;
      overflow: hidden;
      width: 60%;
    }

    &__form {
    }

    &__submit {
      margin-top: 2rem;
      display: flex;
      align-items: center;

      a {
        padding: 1.2rem 1.8rem;
      }

      p {
        padding-left: 2rem;
        font-size: 0.8rem;
        color: rgba(128, 128, 128, 0.5);
      }
    }
  }
</style>
