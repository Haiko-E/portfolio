  <div class='nav-mobile'>
    <div class='menu btn1' data-menu='1'>
      <div class='icon-left'></div>
      <div class='icon-right'></div>
    </div>
  </div>
</nav>

<style lang='scss'>
  @import '../sass/variables.scss';
  @import '../sass/components.scss';

  .nav {
    min-height: 50px;
    margin: auto;
    position: fixed;
    top: 0;
    right: 0;
    left: 0;
    z-index: 40;
    transition: all ease-in 300ms;

    a {
      text-transform: uppercase;
      text-decoration: none;
      color: $platinum;
    }

    @media only screen and (max-width: $media-medium) {
      min-height: 80px;
    }
  }

  .nav-logo {
    position: absolute;
    top: 15px;
    left: 10%;
    font-family: 'Roboto Mono';
  }

  .nav-links {
    position: absolute;
    top: 15px;
    right: 10%;
    display: flex;

    a {
      letter-spacing: 1.5px;
      margin-left: 1rem;
    }
    svg {
      margin-left: 1rem;
    }

    @media only screen and (max-width: $media-medium) {
      transition: all ease-in 300ms;
      opacity: 0;
      position: absolute;
      top: 25px;
      left: 10%;

      a:first-child {
        margin-left: 0;
      }
    }
  }
  .nav-primary {
    display: flex;
    align-items: center;
    font-size: 0.8rem;

    :hover {
      text-underline-offset: 7px;
      text-decoration: underline;
    }
  }

  .nav-background {
    backdrop-filter: blur(10px);
    background-color: rgba(0, 0, 0, 0.6);
  }

  .nav-secondary {
    display: flex;
    align-items: center;
  }

  .nav-mobile {
    position: absolute;
    top: 8px;
    right: 0.5rem;

    @media only screen and (min-width: $media-medium) {
      display: none;
    }
  }

  .show {
    top: 50px;
    opacity: 1;
    display: flex;

    @media only screen and (min-width: $media-medium) {
      top: 15px;
    }
  }

  .nav-height {
    min-height: 50px;
  }
</style>

<script>
  import '../ts/navbar';
</script>
