---
import '@fontsource/roboto';
---

<section id='source' class='source-code'>
  <div class='source-code__image'>
    <img
      src='https://res.cloudinary.com/dxqagufcd/image/upload/c_scale,w_1500/v1670878540/Portfolio/IMG_20220902_115247-2_j2oggi.webp'
      alt=''
      srcset=''
    />
  </div>
  <div class='source-code__content'>
    <h2>Source Code</h2>
    <h3>Please tell me</h3>
    <p>Curious about al the details? checkout the source..</p>

    <a class='btn btn-custom' href='https://github.com/Haiko-E/portfolio'
      >Get the source</a
    >
  </div>
</section>

<style lang='scss'>
  @import '../sass/_variables.scss';
  @import '../sass/_components.scss';

  .source-code {
    display: flex;
    height: 100vh;
    width: 100%;
    background-color: $platinum;
    position: relative;

    @media only screen and (max-width: $media-medium) {
      flex-direction: column;
      height: auto;
    }

    &__image {
      overflow: hidden;
      width: 50%;

      @media only screen and (max-width: $media-medium) {
        width: 100%;
        height: 500px;
      }

      img {
        width: 100%;
        height: 100%;
        object-fit: cover;
      }
    }

    &__content {
      display: flex;
      justify-content: center;
      align-items: center;
      flex-direction: column;
      width: 50%;

      @media only screen and (max-width: $media-medium) {
        width: 100%;
        padding: 5rem 0rem;
        flex: 1;
      }

      h4 {
        color: $black;
      }

      p {
        margin-bottom: 5em;

        @media only screen and (max-width: $media-medium) {
          margin-bottom: 3em;
        }
      }
    }
  }
</style>

<script></script>
